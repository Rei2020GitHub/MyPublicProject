<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/button_fetch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/text_view_label_boolean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="boolean : "
            app:layout_constraintTop_toBottomOf="@+id/button_fetch"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_view_boolean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/text_view_label_boolean"
            app:layout_constraintStart_toEndOf="@+id/text_view_label_boolean"
            tools:text="true"
            />

        <TextView
            android:id="@+id/text_view_label_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="double : "
            app:layout_constraintTop_toBottomOf="@+id/text_view_boolean"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_view_double"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/text_view_label_double"
            app:layout_constraintStart_toEndOf="@+id/text_view_label_double"
            tools:text="1234567890.12"
            />

        <TextView
            android:id="@+id/text_view_label_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="long : "
            app:layout_constraintTop_toBottomOf="@+id/text_view_double"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_view_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/text_view_label_long"
            app:layout_constraintStart_toEndOf="@+id/text_view_label_long"
            tools:text="123456789012"
            />

        <TextView
            android:id="@+id/text_view_label_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="string : "
            app:layout_constraintTop_toBottomOf="@+id/text_view_long"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_view_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/text_view_label_string"
            app:layout_constraintStart_toEndOf="@+id/text_view_label_string"
            tools:text="String"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>